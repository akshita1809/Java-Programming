import java.util.Scanner ;
import java.io.*; 
public class Solution {
	public static long evenSumTillN(int n) {
		Scanner sc= new Scanner(System.in);
		n= sc.nextInt(); //taking input from user for n till which sum needs to be calculated
		int i=0;
		long sum=0;
		while (i<=n) {
				sum+=i;
				i+=2;
		}
		return sum;
	}
}
